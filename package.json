{
  "name": "launchql-extensions",
  "version": "0.0.1",
  "author": "launchql <hello@launchql.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/launchql/extensions"
  },
  "license": "MIT",
  "engines": {
    "node": "^20 || ^18"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "packageManager": "pnpm@10.12.2",
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "glob@*": "^7.2.3",
      "pgsql-parser": "^17.8.2",
      "libpg-query": "^17.6.0"
    },
    "onlyBuiltDependencies": [
      "libpg-query",
      "mmmagic"
    ]
  },
  "scripts": {
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "migrate:sql": "bash scripts/migrate-sql-assets.sh",
    "db:start": "bash scripts/dev-db.sh",
    "db:stop": "docker stop launchql-pg || true && docker rm launchql-pg || true",
    "test:db": "PGHOST=localhost PGPORT=5432 PGUSER=postgres PGPASSWORD=postgres PGDATABASE=testdb DATABASE_URL=postgres://postgres:postgres@localhost:5432/testdb pnpm -r test"
  },
  "devDependencies": {
    "@launchql/db-testing": "^2.2.1",
    "@launchql/graphql-testing": "^2.3.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cpy-cli": "^6.0.0",
    "envalid": "^8.0.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "graphile-test": "^2.3.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.6.2",
    "jest-in-case": "^1.0.2",
    "lerna": "^8.2.3",
    "pgsql-test": "^2.6.2",
    "prettier": "^3.0.2",
    "rimraf": "4.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  }
}
